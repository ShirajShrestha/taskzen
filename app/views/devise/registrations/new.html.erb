<div class="flex flex-col md:flex-row items-center justify-center h-screen bg-white">
    <div class="hidden md:flex w-1/2 h-full items-center justify-center">
        <img src="https://img.freepik.com/free-vector/students-employees-adding-events-deadlines-calendar-app-young-people-using-time-organizer-planner-flat-illustration_74855-20735.jpg?t=st=1734940035~exp=1734943635~hmac=d22630cf8dc2d35a75746bda0f9a7157cd78938d02b246d0d10d0767d55f2e2f&w=826" alt="TaskZen Vector Illustration" class="object-contain w-3/4 h-3/4">
    </div>

    <div class="w-full md:w-1/2 max-w-md bg-white shadow-lg rounded-lg p-8">
        <h2 class="text-3xl font-bold text-primary mb-6 text=center">Sign up to <span class="text-accent">TaskZen</span></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: "space-y-4"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-1">
            <%= f.label :email, class: "block text-sm font-medium text-primary" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-accent focus:outline-none" %>
        </div>

        <div class="space-y-1">
            <%= f.label :password, class: "block text-sm font-medium text-primary" %>
            <% if @minimum_password_length %>
            <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-accent focus:outline-none" %>
        </div>

        <div class="space-y-1">
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-primary" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-accent focus:outline-none" %>
        </div>

        <div class="mt-4">
            <%= f.submit "Sign up", class: "w-full bg-accent text-gray-800 py-2 rounded-md hover:bg-accent-light transition focus:ring focus:ring-accent" %>
        </div>
        <% end %>

        <div class="text-center mt-4 text-sm text-primary">
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>